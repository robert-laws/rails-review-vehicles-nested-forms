<h1>All Owners</h1>

<%#= render partial: 'selection', locals: { selection_number: @number } %>

<ul>
  <% @owners.each do |owner| %>
    <li>
      <%= link_to owner.name, owner_path(owner) %> -- currently owns <%= owner.vehicles.size %> vehicles.
    </li>
  <% end %>
</ul>

<hr>

<%= form_tag("/owners/new", method: "get") do %>
  <%= select_tag "number_choice", options_for_select([1, 2, 3, 4], 1) %>
  <%= submit_tag "Select Number of Vehicles" %>
<% end %>
<hr>

